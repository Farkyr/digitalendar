<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
        <title>{% block title %}Digitalendar{% endblock %}</title>
        {% block stylesheets %} {{ encore_entry_link_tags('app') }} {% endblock %}
    </head>
    <body>
        {% block header %}
            <header>
                <div class="navbar shadow-sm">
                    <div class="container d-flex justify-content-between">
                        <a href="{{ path('homepage') }}" class="navbar-brand d-flex align-items-center">
                            <strong>Digitalendar</strong>
                        </a>
                        <nav class="my-2 my-md-0">
                            <a class="p-2 " href="{{ path('event_index') }}">Les événements</a>

                            {% if app.user %}
                                <a class="p-2 " href="{{ path('event_new') }}">Proposer un événement</a>
                                <a class="p-2 " href="{{ path('account') }}">Mon compte</a>
                                <a class="p-2 " href="{{ path('app_logout') }}">Déconnexion</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="p-2 admin" href="{{ path('easyadmin') }}">Admin</a>
                                {% else %}
                                {% endif %}
                            {% else %}
                                <a class="p-2 " href="{{ path('app_login') }}">Proposer un événement</a>
                                <a class="p-2 " href="{{ path('app_login') }}">Connexion</a>
                                <a class="p-2 " href="{{ path('app_register') }}">Inscription</a>
                            {% endif %}
                        </nav>
                    </div>
                </div>
            </header>
        {% endblock %}

        <main role="main">
            <div class="py-5 bg-light">
                <div class="container">
                    {% block body %}

                    {% endblock %}
                </div>
            </div>
        </main>

        {% block footer %}
        <footer class="text-muted">
            <div class="container">
                <p class="float-right">
                    <a href="#">Haut de page</a>
                </p>
                <p> Digitalendar 2019 | Credits to DCDEV2</p>
            </div>
        </footer>
        {% endblock %}
        {% block javascripts %}{{ encore_entry_script_tags('app') }} {% endblock %}
    </body>
</html>




